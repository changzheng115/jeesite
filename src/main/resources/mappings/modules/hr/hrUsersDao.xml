	<update id="update">
		UPDATE hr_users SET 	
			nickname=#{nickname},
			  company=#{company},
			  name=#{name},
			  sex=#{sex},
			  idcard=#{idcard},
			  telphone=#{telphone},
			  mobile=#{mobile},
			  email=#{email},
			  password=#{password}
		WHERE id =#{id}
	</update>
	
	<delete id="delete">

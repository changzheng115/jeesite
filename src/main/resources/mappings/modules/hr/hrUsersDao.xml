	<!--根据条件查询人事专员数据  list-->
	<select id="findList" resultType="hr_users">
		SELECT id,
		  nickname,
		  company,
		  NAME,
		  sex,
		  idcard,
		  telphone,
		  mobile,
		  email,
		  PASSWORD 
		FROM
		  hr_users 
		WHERE 1=1
		<if test="nickname != null and nickname != ''">
			AND nickname like CONCAT('%',#{nickname},'%') 
		</if>
		<if test="company != null and company != ''">
			AND company = #{company}
		</if>
		<if test="sex != null and sex != ''">
			AND sex = #{sex}
		</if> 
		ORDER BY id ASC
	</select>
	
	<!--按名字查询人事专员数据 view -->
	<select id="get" resultType="hr_users">
		SELECT id,
		  nickname,
		  company,
		  NAME,
		  sex,
		  idcard,
		  telphone,
		  mobile,
		  email,
		  PASSWORD 
		FROM
		  hr_users 
		WHERE  id = #{id}
		ORDER BY id ASC
	</select>
	
